snippet   if
options   head
  if ${1:condition}
    ${2:content}
  endif

snippet   ifv
  if ${1:condition}
    ${2:TARGET}
  endif

snippet   function
alias     func function!
options   head
  function! ${1:FUNCTION_NAME}(${2:#:ARGS})
    ${3:implementation}
  endfunction

snippet   augroup
alias     group
options   head
  augroup ${1:GROUP_NAME}
    autocmd!
    ${2}
  augroup END
